{
  "manifest_version": 3,
  "name": "TrackFlow",
  "version": "2.1.0",
  "description": "Save job listings locally with smart extraction.",
  "permissions": ["activeTab", "scripting", "storage", "tabs", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TrackFlow"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

